<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <p>This is the summary page</p>

    <a href="decks/new-deck"><button>Create Deck</button></a>
    <a href="/decks/index">Database</a>

    <!-- forEach deck... 
deck name: 
a href to flashcard page -->

    <!-- table
col: cards due
row: #  -->
    <table>
      <thead>
        <tr>
          <th>Deck</th>
          <th>Cards Due:</th>
        </tr>
      </thead>
      <tbody>
        <% decks.forEach(function(d) {%>
        <tr>
          <td><a href="decks/<%=d._id%>"><%= d.name %></a></td>
          <td>#</td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
