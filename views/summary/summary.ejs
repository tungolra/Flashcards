<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link rel="stylesheet" href="stylesheets/summary.css" />
    <script defer src="../javascripts/script.js"></script>
    <title>Document</title>
  </head>
  <header>
    <nav>
      <a href="/"
        ><span class="material-symbols-outlined"> arrow_back_ios </span
        ><span class="material-symbols-outlined"> home </span></a
      >
      <h1>Placeholder</h1>

      <a href="/"><span class="material-symbols-outlined"> logout </span></a>
    </nav>
  </header>
  <body>
    <div class="display-container">
      <div class="options-container">
        <a href="decks/new-deck"
          ><button>
            <span class="material-symbols-outlined"> add_circle </span> Create
            Deck
          </button></a
        >
        <a class="database" href="/decks/index"
          ><button>
            Database<span class="material-symbols-outlined"> database </span>
          </button></a
        >
      </div>
      <table>
        <thead>
          <tr>
            <th>Deck</th>
            <th>Cards Due</th>
            <th>Total Cards</th>
          </tr>
        </thead>
        <tbody>
          <% decks.forEach(function(d) {%>
          <tr>
            <td><a href="decks/<%=d._id%>"><%= d.name %></a></td>
            <td>#%></td>
            <td><%=d.flashcards.length%></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
