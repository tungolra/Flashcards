<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />
    <link rel="stylesheet" href="/stylesheets/decks-index.css" />
    <title>Document</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/summary"
          ><span class="material-symbols-outlined"> arrow_back_ios </span
          ><span class="material-symbols-outlined"> empty_dashboard </span></a
        >
        <h1>Database</h1>
        <a href="/"><span class="material-symbols-outlined"> logout </span></a>
      </nav>
    </header>

    <!-- side bar here -->
    <ul>
      <li class="dropdown">
        <span> Filters â–¾</span>
        <ul class="features-menu">
          <li>
            Decks
            <ul class="decks-menu">
              <%decks.forEach(d => {%>
              <li><%=d.name%></li>
              <%});%>
            </ul>
          </li>
          <li>Due</li>
          <li>Pending</li>
          <li>
            Tags
            <ul class="tags-menu">
              <!-- flashcards.forEach... -->
              <li>(tag names)</li>
            </ul>
          </li>
        </ul>
      </li>
    </ul>

    <!-- display here -->
    <div class="display-container">
      <!-- display 
        flashcards.forEach...-->
      <table>
        <thead>
          <tr>
            <th>Flashcard</th>
            <th>Due</th>
            <th>Deck Name</th>
          </tr>
        </thead>
        <%allCards.forEach((card) => {%>
          
        <tbody>
          <tr>
            <th><%= card.flashcard.front %></th>
            <th><%= card.flashcard.due %></th>
            <th><%= card.deckName %></th>
          </tr>
        </tbody>
        <%})%>

        <!-- <tbody>
          <tr>
            <th>(front card text up to 100char or so</th>
            <th>(Date)</th>
            <th>Deck Name</th>
          </tr>
        </tbody> -->
      </table>

      <!-- preview -->
      <!-- preview flashcard selected in display view-->
      <div class="preview-container">
        <section>
          <strong> Preview </strong>
          <div class="front">
            <div class="fc-header"><strong>Front</strong></div>
            <div>(front text)</div>
          </div>
          <div class="back">
            <div class="fc-header"><strong> Back </strong></div>
            <div>(back text)</div>
          </div>
        </section>
      </div>
    </div>
  </body>
</html>
